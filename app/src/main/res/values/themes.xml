<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bookieuz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget.MaterialComponents.BottomNavigationView.Active" parent="">
        <!--        <item name="android:textStyle">bold</item>-->
        <item name="itemIconTint">@color/purple_500</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>
    <style name="Widget.MaterialComponents.BottomNavigationView.InActive" parent="">
        <!--        <item name="android:textStyle">bold</item>-->
        <item name="itemIconTint">@color/grey_600</item>
        <item name="android:textColor">@color/grey_600</item>
    </style>
</resources>